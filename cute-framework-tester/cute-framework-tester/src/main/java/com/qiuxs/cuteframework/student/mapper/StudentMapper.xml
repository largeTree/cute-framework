<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiuxs.cuteframework.student.dao.StudentDao"><!--dsName="" saasAspect="" -->
	<!-- <cache readOnly="true"/> -->
	<!-- 启用Redis缓存时去除下方注释 -->
	<!-- <cache eviction="LRU" type="com.qiuxs.tech.mybatis.cache.MybatisRedisCache" readOnly="true" /> -->
	
	<sql id="allFields">
		`id`,
		`name`,
		`age`
	</sql>
	
	<sql id="insertFields">
		`id`,
		`name`,
		`age`
	</sql>
	
	<insert id="insert" parameterType="com.qiuxs.cuteframework.student.entity.Student">
		insert into `student` (<include refid="insertFields"></include>)
		values (
			#{id},
			#{name},
			#{age}
			)
	</insert>
	
	<insert id="insertInBatch" parameterType="com.qiuxs.cuteframework.student.entity.Student">
		insert into `student` (<include refid="insertFields"></include>)
		values <foreach collection="list" item="item" open="(" separator="," close=")">
			(
			#{item.id},
			#{item.name},
			#{item.age}
			)
		</foreach>
	</insert>
</mapper>    
