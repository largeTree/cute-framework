<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiuxs.cuteframework.common.biz.func.dao.FuncDao">

	<sql id="allFields">
		`id`,
		`parent_id` as parentId,
		`level`,
		`func_type` as funcType,
		`name`,
		`term_cap` as termCap,
		`show_order` as showOrder,
		`extra`,
		`rem`
	</sql>

	<sql id="insertFields">
		`id`,
		`parent_id`,
		`level`,
		`func_type`,
		`name`,
		`term_cap`,
		`show_order`,
		`extra`,
		`rem`
	</sql>

	<select id="list" resultType="com.qiuxs.cuteframework.common.biz.func.entity.Func" >
		select
			<include refid="allFields" />
		from `ct_func`
		<where>
			<include refid="comnWhere" />
		</where>
		<if test="orderBy != null" >
			order by ${orderBy}
			<if test="orderByDesc != null">
				desc
			</if>
		</if>
	</select>
	
	<select id="getCount" resultType="Long" >
		select 
			count(1) 
		from `ct_func`
		<where>
			<include refid="comnWhere" />
		</where>
	</select>

	<sql id="comnWhere">
		<if test="id != null">
			`id` = #{id}
		</if>
		<if test="parentId != null">
			 and `parent_id` = #{parentId}
		</if>
		<if test="level != null">
			 and `level` = #{level}
		</if>
		<if test="funcType != null">
			 and `func_type` = #{funcType}
		</if>
		<if test="name != null">
			 and `name` = #{name}
		</if>
		<if test="termCap != null">
			 and `term_cap` = #{termCap}
		</if>
		<if test="showOrder != null">
			 and `show_order` = #{showOrder}
		</if>
		<if test="extra != null">
			 and `extra` = #{extra}
		</if>
		<if test="rem != null">
			 and `rem` = #{rem}
		</if>
	</sql>

	<select id="getByIds" resultType="com.qiuxs.cuteframework.common.biz.func.entity.Func" >
		select <include refid="allFields" /> from `ct_func` where id in
		<foreach collection="list" item="item" open="(" separator="," close=")" >
			#{item}
		</foreach>
	</select>

	<select id="get" resultType="com.qiuxs.cuteframework.common.biz.func.entity.Func" >
		select <include refid="allFields" /> from `ct_func` where id = #{id}
	</select>
	
	<select id="getAll" resultType="com.qiuxs.cuteframework.common.biz.func.entity.Func" >
		select <include refid="allFields" /> from `ct_func` 
	</select>

	<delete id="deleteById" parameterType="String" >
		delete from `ct_func` where id = #{id}
	</delete>

	<insert id="insert" parameterType="com.qiuxs.cuteframework.common.biz.func.entity.Func">
		insert into `ct_func`(<include refid="insertFields" />)
		values(
			#{id},
			#{parentId},
			#{level},
			#{funcType},
			#{name},
			#{termCap},
			#{showOrder},
			#{extra},
			#{rem}
		)
	</insert>

	<insert id="insertInBatch" parameterType="java.util.List" >
		insert into `ct_func`(<include refid="insertFields" />)
		values
		<foreach collection="list" item="item" separator="," >
			(
				#{item.id},
				#{item.parentId},
				#{item.level},
				#{item.funcType},
				#{item.name},
				#{item.termCap},
				#{item.showOrder},
				#{item.extra},
				#{item.rem}
			)
		</foreach>
	</insert>

	<update id="update" parameterType="com.qiuxs.cuteframework.common.biz.func.entity.Func" >
		update `ct_func` 
			<set>
				<include refid="setComn" />
			</set>
		where id = #{id}
	</update>

	<sql id="setComn" >
		<if test="parentId != null" >
			`parent_id` = #{parentId},
		</if>
		<if test="level != null" >
			`level` = #{level},
		</if>
		<if test="funcType != null" >
			`func_type` = #{funcType},
		</if>
		<if test="name != null" >
			`name` = #{name},
		</if>
		<if test="termCap != null" >
			`term_cap` = #{termCap},
		</if>
		<if test="showOrder != null" >
			`show_order` = #{showOrder},
		</if>
		<if test="extra != null" >
			`extra` = #{extra},
		</if>
		<if test="rem != null" >
			`rem` = #{rem}
		</if>
	</sql>
</mapper>